<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JBS.Calculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30">
            <Label
                Text="First Number"
                FontSize="Large">
            </Label>
            <Border
                Stroke="black"
                StrokeThickness="1">
                <Entry x:Name="txtFirstNum" Keyboard="Numeric"/>
            </Border>
            <Label
                Padding="0,20,0,0"
                Text="Second Number"
                FontSize="Large">
            </Label>
            <Border
                Stroke="black"
                StrokeThickness="1">
                <Entry x:Name="txtSecondNum" Keyboard="Numeric"/>
            </Border>
            <Label
                x:Name="lblDisplay" 
                Padding="0,35"
                Text="0"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                FontSize="40">
            </Label>
            <Button
                Text="Add" Clicked="Add_OnClick">
            </Button>
            <Button
                Text="clear" Clicked="Clear_OnClick">
            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

